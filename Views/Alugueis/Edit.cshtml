@model net_car_ASPNETCORE.Models.Aluguel

@{
	ViewData["Title"] = "Edit";
	Layout = "~/Views/Shared/_LayoutMenu.cshtml";
}

@section head {
	<link rel="stylesheet" runat="server" type="text/css" href="~/css/NetCarMasterStyles.css" />
	<link rel="stylesheet" runat="server" type="text/css" href="~/css/MotoristaEdit.css" />
	<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons" />
}
<div class="container-create">
	<div style="margin-top: 50px"></div>
	<div>
		<h1 class="title-edit">Editar Aluguel</h1>
	</div>

	<hr style="width: 90%; border: 1px solid lightgray" />
	<br />
	<div class="row">
		<div class="col-md-4">
			<form asp-action="Edit">
				<div class="form-group">
					<div asp-validation-summary="ModelOnly"></div>
					<div class="line">
						<div class="form-fields">
							<label class="form-label">Veículo</label><br />
							<select asp-for="veiculo" class="client-dropdown">
								<option selected>
									Selecione um veículo
								</option>
								@for (int i = 0; i < ViewBag.veiculoCount; i++)
								{
									<option value="@ViewBag.valueDocumento[i]">@ViewBag.documento[i]</option>
								}
							</select>
						</div>
						<div class="form-fields">
							<label class="form-label">Cliente</label><br />
							<select asp-for="cliente" class="client-dropdown">
								<option selected>
									Selecione um cliente
								</option>
								@for (int i = 0; i < ViewBag.clienteCount; i++)
								{
									<option value="@ViewBag.valueCnpj[i]">@ViewBag.cnpj[i]</option>
								}
							</select>
						</div>
					</div>
					<div class="line">
						<div class="form-fields">
							<label asp-for="valor_aluguel" class="form-label"></label><br />
							<input asp-for="valor_aluguel" class="form-input" required="required" /><br />
							<span asp-validation-for="valor_aluguel"></span>
						</div>
						<div class="form-fields">
							<label asp-for="duracao" class="form-label"></label><br />
							<input asp-for="duracao" class="form-input" required="required" /><br />
							<span asp-validation-for="duracao"></span>
						</div>
					</div>
					<div class="radio-fields">
						<label class="container">
							Ativo
							<input type="radio" checked="checked" name="status" value="Ativo" asp-for="status">
							<span class="checkmark"></span>
						</label>
						<label class="container">
							Finalizado
							<input type="radio" name="status" value="Finalizado" asp-for="status">
							<span class="checkmark"></span>
						</label>
					</div>
					<div class="btn-container">
						<div>
							<input type="submit" value="Editar" class="submit-btn" />
						</div>
						<div>
							<a class="back-btn" asp-action="Index">Voltar</a>
						</div>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>
